<% user_id = current_user.id %>
<% @postsType.each do |post| %>
		
	<% postId = 'post' + post.id.to_s %>

	<div class="post" id="<%= postId %>">

		<% buttonReactionId = 'reactionPost'+post.id.to_s+"_" %>
		<% counterReactionId = 'counterPost'+post.id.to_s+"_" %>
		<% ownerPost_id = post.user_id %>

    	<div class="card">
    		<span class="openPost"><%= link_to dashboards_showPost_path(:post_id => post.id), {:remote => true, 'data-toggle' =>  "modal", 'data-target'=>'#postModal', :class => "openPostLink"} do %>
    		<% end %></span>

    		<div class="card-header" id="cardHeaderPost">
    			<%= link_to  post.user.name, dashboards_userProfile_path(:id => post.user_id), :id => "cardHeaderPostLink" %>

    			<li class="nav-item dropdown" style="position:absolute;right:0;color: transparent;">
			        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="position:absolute;top:0;right: 0;color: white;">
			        </a>

			        <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="position:relative;z-index: 3;">

			        	<a class="dropdown-item" onclick="hidePost('<%= postId %>')" style="cursor:pointer;">Esconder</a>

	          			<% if post.user_id == current_user.id %>
		    				<%= link_to "Deletar", post_path(:id => post.id),:remote => true, :method => "delete", data: { confirm: "Tem certeza que deseja deletar a postagem?" }, :class => "dropdown-item" %>
		    			<% end %>

			        </div>
			      </li>

		    </div>

		    <div class="card-body" id="cardBodyPost">
		        <%= post.content %>
		    </div>

		 	<div class="card-footer" id="cardFooterPost">
		 		
		 		<% @reaction = @reactionsTimeline.where(owner_id:post.id, owner_type:"Post").first %>
				<% @colorBlue = "#3333cc;" %>
				<% @colorBlack = "black;" %>
				<% if  @reaction %>
					<% @type = @reaction.reactionType %>
        		<% else %>
        			<% @type = "" %>
        		<% end %>


		        <%= form_with url: "/reactions", authenticity_token: false do |f|%>
			       	<input name="user_id" type="hidden", value="<%= current_user.id %>" />
			       	<input name="owner_id" type="hidden", value="<%= post.id %>" />
			       	<input name="owner_type" type="hidden", value="Post" />

					<div class="reaction" style="left:0;">
				       	<ul>
							<a>
   								<li class="reaction-menu">
   									
						        	<div class="actions">
						        		<button  onclick="changeReaction(this, <%= post.id %>, 'Post',<%= user_id %>, <%= ownerPost_id %>)" class="fas fa-thumbs-up" value="type1" name="reactionType" style=<%= 'color:'+(@type == "type1" ? @colorBlue : @colorBlack) %> id='<%=buttonReactionId+"type1"%>' data-disable="true"></button>
									</div>
								</li>
							</a>
						</ul>
						<ul>
							<a>
									<li class="reaction-menu" id=<%= counterReactionId+"type1" %>>
						   			<%= post.reactionType1 %>
						   		</li>
						 	</a>
						 </ul>
					</div>

					<div class="reaction" style="margin-left: 20px;">
				       	<ul>
							<a>
   								<li class="reaction-menu">
						        	<div class="actions">
						        		<button  onclick="changeReaction(this, <%= post.id %>, 'Post',<%= user_id %>, <%= ownerPost_id %>)" class="fas fa-surprise" value="type2" name="reactionType" style=<%= 'color:'+(@type == "type2" ? @colorBlue : @colorBlack) %>  id='<%=(buttonReactionId+"type2")%>' data-disable="true" ></button>
									</div>
								</li>
							</a>
						</ul>
						<ul>
							<a>
									<li class="reaction-menu" id=<%= counterReactionId+"type2" %>>
						   			<%= post.reactionType2 %>
						   		</li>
						 	</a>
						 </ul>
					</div>

					<div class="reaction" style="margin-left: 50px;">
				       	<ul>
							<a>
   								<li class="reaction-menu">
						        	<div class="actions">
						        		<button  onclick="changeReaction(this, <%= post.id %>, 'Post',<%= user_id %>, <%= ownerPost_id %>)" class="fas fa-angry" value="type3" name="reactionType" style=<%= 'color:'+(@type == "type3" ? @colorBlue : @colorBlack) %> id='<%=buttonReactionId+"type3"%>' data-disable="true" ></button>
									</div>
								</li>
							</a>
						</ul>
						<ul>
							<a>
									<li class="reaction-menu" id=<%= counterReactionId+"type3" %>>
						   			<%= post.reactionType3 %>
						   		</li>
						 	</a>
						 </ul>
					</div>

					<div class="reaction" style="margin-left: 80px;">
				       	<ul>
							<a>
   								<li class="reaction-menu">
						        	<div class="actions">
						        		<button  onclick="changeReaction(this, <%= post.id %>, 'Post',<%= user_id %>, <%= ownerPost_id %>)" class="fas fa-sad-cry" value="type4" name="reactionType" style=<%= 'color:'+(@type == "type4" ? @colorBlue : @colorBlack) %> id='<%=buttonReactionId+"type4"%>' data-disable="true" ></button>
									</div>
								</li>
							</a>
						</ul>
						<ul>
							<a>
									<li class="reaction-menu" id=<%= counterReactionId+"type4" %>>
						   			<%= post.reactionType4 %>
						   		</li>
						 	</a>
						 </ul>
					</div>

					 <div class="reaction" style="margin-left: 110px;">
				       	<ul>
							<a>
   								<li class="reaction-menu">
						        	<div class="actions">
						        		<button  onclick="changeReaction(this, <%= post.id %>, 'Post',<%= user_id %>, <%= ownerPost_id %>)" class="fas fa-thumbs-down" value="dislike" name="reactionType" style=<%= 'color:'+(@type == "dislike" ? @colorBlue : @colorBlack) %> id='<%=buttonReactionId+"dislike"%>' data-disable="true" ></button>
									</div>
								</li>
							</a>
						</ul>
						<ul>
							<a>
									<li class="reaction-menu" id=<%= counterReactionId+"dislike" %>>
						   			<%= post.dislikes %>
						   		</li>
						 	</a>
						 </ul>
					</div>

			 	<% end %>
			 	
			 </div>

		</div>

	</div>

<% end %>

<button onclick="loadDoc(<%= @lastPost_id %>, this, '<%= @pageType %>', <%= @optionalId %>, '<%= dashboards_renderMore_path %>')">
	Carregar Mais
</button>