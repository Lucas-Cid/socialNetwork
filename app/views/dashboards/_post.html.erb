						       	<ul>
    								<a>
	       								<li class="reaction-menu">
								        	<div class="actions">
								        		<button  onclick="changeReaction(this, <%= commentary.id %>, 'Commentary',<%= user_id %>, <%= ownerPost_id %>)" class="fas fa-surprise" value="type2" name="reactionType" style=<%= 'color:'+(@type == "type2" ? @colorBlue : @colorBlack) %>  id=<%=(buttonReactionId+"type2")%> ></button>
											</div>
										</li>
									</a>
								</ul>
								<ul>
	    							<a>
